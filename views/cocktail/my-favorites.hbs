<section class="relative " style="height: 1900px; background: url('/images/list.background.jpg') repeat; background-size: cover;">

    <div class="grid grid-cols-3 mx-20 ">
        
        {{#each favorites}}
           
            <div class="bg-black flex flex-col items-center z-10 rounded-3xl shadow-md lg:p-5 md:p-3 sm:p-0 max-w-xs mx-auto my-5">
                <h1 class="text-cocktail_chronicles-grey text-base font-bold mb-4">{{name}}</h1>
                <img src="{{image}}" alt="{{name}}" class="w-2/3 mb-4 rounded-lg">

                <ul class="mb-3 hidden md:block">

                    {{#each ingredients}}
                    <li class="text-cocktail_chronicles-grey text-xs">{{ingredient}} - {{measurement}}</li>
                    {{/each}}
                </ul>
               
                <form method="POST" action="/favorite/removefavoritebyid" class="mt-auto">
                    <input type="hidden" name="cocktailId" value="{{id}}">
                    <button type="submit" class="bg-cocktail_chronicles-purple text-white py-1 px-2 rounded-md hover:bg-cocktail_chronicles-green text-xs">
                        Remove
                    </button>
                </form>
            </div>
            
        {{/each}}
        
    </div>
    
</section>

